<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.borune.wheelcontrol.MainActivity">

    <com.borune.wheelcontrol.WheelControl
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/wheel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:scrubberAngle="0"
        app:scrubberColor="#ffffff"
        app:scrubberDrawable="@drawable/scrubber_background"
        app:wheelColor="@color/colorPrimary"
        app:showAngle="true"
        app:wheelRadius="260"
        app:minAngle="-135"
        app:maxAngle="135"
        app:angleTextSize="35"
        />

</android.support.constraint.ConstraintLayout>
